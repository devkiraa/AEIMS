                'event_link'
            ];

            inputFields.forEach(id => {
                const input = document.getElementById(id);
                if (input) {
                    input.addEventListener('input', checkRequiredFields);
                } else {
                    console.error(`Element with ID ${id} not found.`);
                }
            });

