<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Resources</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex flex-col">
        <!-- Navbar -->
    <nav class="bg-blue-600 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Move header elements to the left -->
            <div class="flex items-center space-x-6">
                <ul class="flex space-x-6 text-white">
                    <li><a href="#" class="hover:text-gray-300">Home</a></li>
                    <li><a href="#" class="hover:text-gray-300">Create</a></li>
                    <li><a href="#" class="hover:text-gray-300">Users</a></li>
                    <li><a href="#" class="hover:text-gray-300">My Events</a></li>
                    <li><a href="#" class="hover:text-gray-300">About Us</a></li>
                </ul>
            </div>
            <!-- User icon in rounded background -->
            <div class="bg-white rounded-full p-2">
                <a href="#"><img src="/assets/icons/avatar.svg" alt="User Icon" class="w-6 h-6"></a>
            </div>
        </div>
    </nav>

        <!-- Main Content -->
        <main class="flex-grow container mx-auto p-6 max-w-5xl">
            <h1 class="text-3xl font-bold mb-8 text-center">Add Resources!</h1>

            <!-- Inventory Section -->
            <div class="mb-12">
                <h2 class="text-xl font-bold mb-4">Inventory</h2>

                <!-- Search Input -->
                <div class="mb-4 w-full md:w-1/2 mx-auto">
                    <input type="text" id="searchInventory" placeholder="Search Inventory..." class="w-full border-2 border-gray-300 rounded-lg p-2">
                </div>

                <!-- Inventory Table -->
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                        <thead>
                            <tr class="bg-gray-100 text-gray-600 text-left">
                                <th class="p-4">Name</th>
                                <th class="p-4">Category</th>
                                <th class="p-4">In Use</th>
                                <th class="p-4">Available</th>
                                <th class="p-4"></th>
                            </tr>
                        </thead>
                        <tbody id="inventoryTable">
                            <!-- Inventory Data (Replace with dynamic data later) -->
                            <tr>
                                <td class="p-4">Chair</td>
                                <td class="p-4">850</td>
                                <td class="p-4">450</td>
                                <td class="p-4">550</td>
                                <td class="p-4"><button class="bg-blue-500 text-white px-3 py-1 rounded-lg">+</button></td>
                            </tr>
                            <tr>
                                <td class="p-4">Lamp</td>
                                <td class="p-4">10</td>
                                <td class="p-4">4</td>
                                <td class="p-4">6</td>
                                <td class="p-4"><button class="bg-blue-500 text-white px-3 py-1 rounded-lg">+</button></td>
                            </tr>
                            <tr>
                                <td class="p-4">Projector</td>
                                <td class="p-4">5</td>
                                <td class="p-4">2</td>
                                <td class="p-4">3</td>
                                <td class="p-4"><button class="bg-blue-500 text-white px-3 py-1 rounded-lg">+</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Event Resources Section -->
            <div class="mb-12">
                <h2 class="text-xl font-bold mb-4">Event Resources</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                        <thead>
                            <tr class="bg-gray-100 text-gray-600 text-left">
                                <th class="p-4">Name</th>
                                <th class="p-4">Count</th>
                                <th class="p-4">Taken Date</th>
                                <th class="p-4">Return Date</th>
                                <th class="p-4"></th>
                            </tr>
                        </thead>
                        <tbody id="eventResourcesTable">
                            <!-- Event Resources Data -->
                            <tr>
                                <td class="p-4">Chair</td>
                                <td class="p-4">50</td>
                                <td class="p-4">24 Oct, 2024</td>
                                <td class="p-4">24 Oct, 2024</td>
                                <td class="p-4"><button class="bg-red-500 text-white px-3 py-1 rounded-lg">x</button></td>
                            </tr>
                            <tr>
                                <td class="p-4">Lamp</td>
                                <td class="p-4">2</td>
                                <td class="p-4">24 Oct, 2024</td>
                                <td class="p-4">24 Oct, 2024</td>
                                <td class="p-4"><button class="bg-red-500 text-white px-3 py-1 rounded-lg">x</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-between">
                <button class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg">
                    ← Back
                </button>
                <button class="bg-blue-600 text-white px-6 py-2 rounded-lg">
                    Preview →
                </button>
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-blue-600 p-4 mt-8">
            <div class="text-center text-white">
                &copy; 2024 Event Management System. All rights reserved.
            </div>
        </footer>
    </div>

    <!-- JavaScript for Filtering and Adding Resources -->
    <script>
        // Example for filtering inventory
        document.getElementById('searchInventory').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('#inventoryTable tr');
            rows.forEach(row => {
                const itemName = row.cells[0].innerText.toLowerCase();
                if (itemName.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Functionality to add resources to event
        document.querySelectorAll('#inventoryTable button').forEach(button => {
            button.addEventListener('click', function() {
                const row = this.closest('tr');
                const name = row.cells[0].innerText;
                const count = row.cells[3].innerText;
                const today = new Date().toLocaleDateString();

                const newRow = `
                    <tr>
                        <td class="p-4">${name}</td>
                        <td class="p-4">${count}</td>
                        <td class="p-4">${today}</td>
                        <td class="p-4">${today}</td>
                        <td class="p-4"><button class="bg-red-500 text-white px-3 py-1 rounded-lg">x</button></td>
                    </tr>
                `;

                document.getElementById('eventResourcesTable').innerHTML += newRow;
            });
        });
    </script>
</body>
</html>
