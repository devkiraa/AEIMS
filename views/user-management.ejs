<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .hidden { display: none; }
    </style>
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex flex-col">
        <!-- Navbar -->
        <nav class="bg-blue-600 p-4">
            <div class="container mx-auto flex justify-between items-center">
                <ul class="flex space-x-6 text-white">
                    <li><a href="#" class="hover:text-gray-300">Home</a></li>
                    <li><a href="#" class="hover:text-gray-300">Events</a></li>
                    <li><a href="#" class="hover:text-gray-300">Users</a></li>
                    <li><a href="#" class="hover:text-gray-300">Inventory</a></li>
                    <li><a href="#" class="hover:text-gray-300">About Us</a></li>
                </ul>
                <div class="bg-white rounded-full p-2">
                    <a href="#"><img src="/assets/icons/avatar.svg" alt="User Icon" class="w-6 h-6"></a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow container mx-auto p-6 max-w-5xl">
            <h1 class="text-3xl font-bold mb-8">Inventory Management</h1>
        
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                    <thead>
                        <tr class="bg-gray-100 text-gray-600 text-left">
                            <th class="p-4">Item Name</th>
                            <th class="p-4">Category</th>
                            <th class="p-4">Quantity</th>
                            <th class="p-4">Action</th>
                        </tr>
                    </thead>
                    <tbody id="inventoryTable">
                        <!-- Inventory rows will be populated dynamically -->
                    </tbody>
                </table>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="bg-blue-600 p-4 mt-8">
            <div class="text-center text-white">
                &copy; 2024 Event Management System. All rights reserved.
            </div>
        </footer>
    </div>

    <!-- Popup Modal -->
    <div id="inventoryPopup" class="fixed inset-0 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-lg max-w-lg w-full">
            <!-- Close Icon -->
            <span class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 cursor-pointer" onclick="closePopup()">&times;</span>

            <h2 class="text-xl font-semibold mb-4">Inventory Details</h2>
            <div id="popupContent">
                <!-- Inventory details will be populated dynamically -->
            </div>
            <div class="mt-4 text-right">
                <button onclick="saveInventory()" class="bg-blue-600 text-white px-4 py-2 rounded-lg">
                    Save
                </button>
                <button onclick="closePopup()" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg mr-2">
                    Cancel
                </button>
            </div>
        </div>
    </div>

    <script>
        const inventoryData = [
            { itemName: 'Projector', category: 'Electronics', quantity: 5 },
            { itemName: 'Microphone', category: 'Audio', quantity: 20 },
            { itemName: 'Chairs', category: 'Furniture', quantity: 100 }
        ];

        // Populate inventory table
        function loadInventory() {
            const inventoryTable = document.getElementById('inventoryTable');
            inventoryTable.innerHTML = ''; // Clear existing rows

            inventoryData.forEach((item, index) => {
                const row = `
                    <tr>
                        <td class="p-4">${item.itemName}</td>
                        <td class="p-4">${item.category}</td>
                        <td class="p-4">${item.quantity}</td>
                        <td class="p-4">
                            <button class="text-gray-500 hover:text-blue-600 mr-4" onclick='editItem(${index})'>
                                <img src="/assets/icons/edit_24dp_6B7280_FILL0_wght500_GRAD0_opsz24.svg" alt="edit" class="w-6 h-6">
                            </button>
                            <button class="text-gray-500 hover:text-red-600" onclick='deleteItem(${index})'>
                                <img src="/assets/icons/delete_24dp_6B7280_FILL0_wght500_GRAD0_opsz24.svg" alt="delete" class="w-6 h-6">
                            </button>
                        </td>
                    </tr>
                `;
                inventoryTable.insertAdjacentHTML('beforeend', row);
            });
        }

        // Open the edit popup and populate it with item details
        function editItem(index) {
            const item = inventoryData[index];
            const popupContent = document.getElementById('popupContent');
            popupContent.innerHTML = `
                <p><strong>Item Name:</strong> ${item.itemName}</p>
                <p><strong>Category:</strong> ${item.category}</p>
                <label for="quantity">Quantity:</label>
                <input type="number" id="itemQuantity" value="${item.quantity}" class="w-full p-2 border rounded-lg">
            `;
            document.getElementById('inventoryPopup').classList.remove('hidden');
        }

        // Delete the item from the inventory
        function deleteItem(index) {
            inventoryData.splice(index, 1); // Remove the item from the array
            loadInventory(); // Reload the table
        }

        // Save the edited item details
        function saveInventory() {
            const quantity = document.getElementById('itemQuantity').value;
            // Assuming saving logic
            console.log('Saved quantity:', quantity);
            closePopup(); // Close the popup after saving
        }

        // Close the popup
        function closePopup() {
            document.getElementById('inventoryPopup').classList.add('hidden');
        }

        // Load inventory on page load
        loadInventory();
    </script>
</body>
</html>
